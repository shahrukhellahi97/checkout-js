        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Text" name="intel.site.selector">
                <arguments>
                    <argument name="text" xsi:type="string"><![CDATA[<div class="intel_site_selector"><a href="https://www.theintelstore.com/shop.axd/WorldMap"><i class="fa fa-globe"></i><span>EMEA</span></a></div>]]></argument>
                </arguments>
            </block>
        </referenceContainer>


        <move element="minicart" destination="header.panel" after="-"/>
        <move element="currency" destination="header.panel" before="-"/>
        <move element="intel.site.selector" destination="header.panel" after="-"/>
        <move element="top.search" destination="header.panel" before="-"/>



        <move element="store_language" destination="header.panel" after="-"/>
        <move element="logo" destination="header.panel" before="-"/>






