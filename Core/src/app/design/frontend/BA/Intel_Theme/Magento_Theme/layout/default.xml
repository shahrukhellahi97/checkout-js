            </container>

            <container name="footer-custom-flex" as="custom-content" htmlTag="div">

                <container name="footer-custom-flexcolumn-contact" htmlTag="div" htmlClass="footer_column_contact">
                    <block class="Magento\Framework\View\Element\Text" name="footer-custom-contact-heading">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[<h4>Contact</h4>]]></argument>
                        </arguments>
                    </block>
                    <block class="Magento\Framework\View\Element\Text" name="footer_custom_contact">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[<ul><li>Broadway House<br>Trafford Wharf Rd, Trafford Park<br>Stretford, Manchester, M17 1DD</li><li>8:00am - 6:00pm<br>Monday - Friday</li><li>+44 (0) 161 786 0217</li><li><a href="mailto:intelstore@brandaddition.com">intelstore@brandaddition.com</a></li></ul>]]></argument>
                        </arguments>
                    </block>
                </container>

                <container name="footer-custom-flexcolumn-info" htmlTag="div" htmlClass="footer_column_information">
                    <block class="Magento\Framework\View\Element\Text" name="footer-custom-info-heading">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[<h4>Information</h4>]]></argument>
                        </arguments>
                    </block>
                    <block class="Magento\Framework\View\Element\Html\Links" name="footer_links_cms">
                    </block>
                </container>
                
                <container name="footer-custom-flexcolumn-categories" htmlTag="div" htmlClass="footer_column_categories">
                    <block class="Magento\Framework\View\Element\Text" name="footer-custom-categories-heading">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[<h4>Categories</h4>]]></argument>
                        </arguments>
                    </block>
                    <block class="Magento\Theme\Block\Html\Footer" name="footer_custom_categories" template="footer-custom-categories.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">BA\Theme\ViewModel\CategoryViewModel</argument>
                        </arguments>
                    </block>
                </container>

                <container name="footer-custom-flexcolumn-giftcertificate" htmlTag="div" htmlClass="footer_column_giftcertificates">
                    <block class="Magento\Framework\View\Element\Text" name="footer-custom-giftcert-heading">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[<h4>Gift Certificates</h4>]]></argument>
                        </arguments>
                    </block>
                    <block class="Magento\Framework\View\Element\Text" name="footer-custom-giftcert-list">
                        <arguments>
                            <argument name="text" xsi:type="string"><![CDATA[<ul><li><a href="#">Buy Gift Certificates</a></li><li><a href="#">Check Gift Certificate balance</a></li></ul>]]></argument>
                        </arguments>
                    </block>
                </container>

            </container>

            <container name="footer-copyright" htmlTag="div" htmlClass="footer_copyright_div">
                <block class="Magento\Framework\View\Element\Text" name="footer-copyright-block">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[<p>This site is owned and operated by Brand Addition and is not affiliated with Intel, its subsidiaries or affiliates.</p><p>Any information collected on this site is subject to and governed by Brand Addition <a href="https://www.brand-estore.com/Intel/info/terms_and_conditions">privacy statement and terms and conditions.</a></p><p>© 2020 <a href="https://www.brandaddition.com/">Brand Addition</a></p>]]></argument>
                    </arguments>
                </block>
            </container>

        </container>

        <move element="privacy-policy-link" destination="footer_links_cms"/>
        <move element="contact-us-link" destination="footer_links_cms"/>
        <move element="search-term-popular-link" destination="footer_links_cms"/>
        <move element="catalog-search-advanced-link" destination="footer_links_cms"/>
        <move element="sales-guest-form-link" destination="footer_links_cms"/>

        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true" />
        <referenceBlock name="copyright" remove="true" />

    </body>
</page>
