<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">usertype_values_form.usertype_values_form_data_source</item>
            <item name="deps" xsi:type="string">usertype_values_form.usertype_values_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Value List</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">usertype_values_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <dataSource name="usertype_values_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">BA\UserType\Model\ValueList\DataProvider</argument>
            <argument name="name" xsi:type="string">usertype_values_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">list_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>

        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="list_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Value List Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>

        <field name="label">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Label</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">valuelist</item>
                    <item name="dataScope" xsi:type="string">label</item>
                </item>
            </argument>
        </field>

        <field name="comment">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Comment</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">valuelist</item>
                    <item name="dataScope" xsi:type="string">comment</item>
                </item>
            </argument>
        </field>
    </fieldset>

    <fieldset name="values">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Values</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </argument>
        
        <insertListing>
            <settings>
                <dataLinks>
                    <exports>false</exports>
                    <imports>true</imports>
                </dataLinks>
                <imports>
                    <link name="list_id">${ $.provider  }:params.list_id</link>
                </imports>
                <exports>
                    <link name="list_id">${ $.externalProvider }:params.list_id</link>
                </exports>
                <autoRender>true</autoRender>
                <externalProvider>usertype_values_form_listing.usertype_values_form_listing_data_source</externalProvider>
                <selectionsProvider>usertype_values_form_listing.usertype_values_form_listing.columns.ids</selectionsProvider>
                <dataScope>usertype_values_form_listing</dataScope>
                <ns>usertype_values_form_listing</ns>
            </settings>
        </insertListing>
    </fieldset>
</form>