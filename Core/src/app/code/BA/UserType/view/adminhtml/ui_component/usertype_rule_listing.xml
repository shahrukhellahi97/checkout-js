<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">usertype_rule_listing.usertype_rules_listing_data_source</item>
		</item>
	</argument>

	<settings>
		<spinner>usertype_rule_listing_columns</spinner>
		<deps>
			<dep>usertype_rule_listing.usertype_rules_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new Rule</label>
			</button>
		</buttons>
	</settings>

    <dataSource name="usertype_rules_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>BA_CustomerRule::List</aclResource>
		<dataProvider name="usertype_rules_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>rule_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>


    <listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>


    <columns name="usertype_rule_listing_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">usertype_rule_listing.usertype_rule_listing.usertype_rule_listing_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">rule_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" xsi:type="url" path="ba_customerrule/List/inlineEdit"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">usertype_rule_listing.usertype_rule_listing.usertype_rule_listing_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		
        <selectionsColumn name="ids">
			<settings>
				<indexField>rule_id</indexField>
			</settings>
		</selectionsColumn>

		<column name="rule_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
        
		<column name="name">
			<settings>
				<filter>text</filter>
				<label translate="true">Name</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>

        <column name="description">
			<settings>
				<filter>text</filter>
				<label translate="true">Description</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>

        <column name="from_date">
			<settings>
				<filter>dateRange</filter>
				<label translate="true">Active From</label>
				<editor>
					<editorType>dateRange</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>

        <column name="to_date">
			<settings>
				<filter>dateRange</filter>
				<label translate="true">Active To</label>
				<editor>
					<editorType>dateRange</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>

        <actionsColumn name="actions" class="BA\UserType\Ui\Component\Rule\Column\Actions">
            <settings>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>
    </columns>

</listing>