<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Custom Request</title>
    </head>
    
    <body>
        <referenceContainer name="content">
            <container name="enquiry.form.container" as="enquiry-container" htmlClass="enquiry-container" label="Customer Login Container" htmlTag="div">
                <block name="enquriry.custom.form" template="BA_Enquiries::custom/index.phtml" cacheable="false">
                    <arguments>
                        <argument name="view_model" xsi:type="object">BA\Enquiries\ViewModel\CustomRequestViewModel</argument>
                    </arguments> 
                </block>
    
                <block name="enquriry.custom.details" after="enquriry.custom.form" template="BA_Enquiries::custom/details.phtml" cacheable="false" />
            </container>
        </referenceContainer>
    </body>
</page>