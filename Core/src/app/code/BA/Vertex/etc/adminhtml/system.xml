<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="basys" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="vertex" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Vertex</label>
                <field id="default" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Default %</label>
                </field>

                <field id="expiration" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Rate Expiration</label>
                    <source_model>Magento\AdminNotification\Model\Config\Source\Frequency</source_model>
                </field>

                <field id="override" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customised</label>
                    <frontend_model>BA\Vertex\Block\Adminhtml\Form\Field\Rates</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>