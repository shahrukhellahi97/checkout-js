<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ba_vertex_tax_rates" resource="default" engine="innodb" comment="Basys Division">
        <column name="destination_country_id" xsi:type="varchar" length="2" nullable="false" />
        <column name="source_country_id" xsi:type="varchar" length="2" nullable="false" />
        <column name="product_source_country_id" xsi:type="varchar" length="2" nullable="false" />
        <column name="basys_id" xsi:type="int" unsigned="true" nullable="false" identity="false" />
        <column name="rate" xsi:type="decimal" scale="6" precision="20" nullable="false" />
        <column name="modified" xsi:type="timestamp" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" />

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="destination_country_id" />
            <column name="source_country_id" />
            <column name="product_source_country_id" />
            <column name="basys_id" />
        </constraint>

        <index referenceId="IDX_BA_VERTEX_TAX_RATES">
            <column name="destination_country_id" />
            <column name="source_country_id" />
            <column name="product_source_country_id" />
            <column name="basys_id" />
            <column name="modified" />
        </index>
    </table>
</schema>