<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cdnjs-js" type="host">cdnjs.cloudflare.com</value>
            </values>
        </policy>

        <policy id="style-src">
            <values>
                <value id="cdnjs-css" type="host">cdnjs.cloudflare.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>