<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="giftAmt" xsi:type="array">
                                    <item name="component"  xsi:type="string">BA_BasysGiftCertificate/js/view/checkout/cart/totals/giftAmt</item>
                                    <item name="sortOrder" xsi:type="string">20</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">BA_BasysGiftCertificate/checkout/cart/totals/giftAmt</item>
                                        <item name="title" xsi:type="string" translate="true">Gift Amt</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <container name="gift_card" htmlTag="div" htmlClass="gift_card">
                <block name="giftcard.viewmodel" template="BA_BasysGiftCertificate::giftcard.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">BA\BasysGiftCertificate\ViewModel\CheckBalance</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
